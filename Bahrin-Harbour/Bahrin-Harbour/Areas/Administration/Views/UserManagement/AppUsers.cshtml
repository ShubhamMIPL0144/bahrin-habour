<div class="container-fluid">
    <form id="books-from">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Book List</h4>
                        </div>
                        <div class="iq-card-header-toolbar d-flex align-items-center">
                            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("CreateClient", "Client")'">Click Me </button>

                        </div>
                    </div>
                    <div class="iq-card-body">
                        <input id="MainPageLoad" type="hidden" value="1" />
