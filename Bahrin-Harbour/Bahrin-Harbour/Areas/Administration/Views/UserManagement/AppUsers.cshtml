                        <input id="DeactivateBooksActionURL" type="hidden" value="@Url.Action("BookDeactivate","Book")" />
                        <input id="BookDetailActionURL" type="hidden" value="@Url.Action("BookDetail","Book")" />      *@
                        <div class="row">
                            <div class="form-group col-md-1">
                                <label asp-for="isActive"></label>
                            </div>

                            <div class="form-group col-md-8">
                                <button type="button" onclick="Book.ClearExternalFilter()" class="btn btn-primary mr-2 pull-right">Clear</button>
                                <button type="button" onclick="Book.GetFilteredBooksData()" class="btn btn-primary mr-2 pull-right">Search</button>
                            </div>
                        </div>
                        @await Html.PartialAsync("AppUserList")
                    </div>
                </div>
            </div>

        </div>
    </form>
